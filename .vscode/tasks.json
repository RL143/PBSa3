{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc.exe build md_debug for debugging",
			//"command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
			"command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
			"args": [
				"-g",
				"${fileDirname}\\*.c",
				"-o",
				"${fileDirname}\\md_debug.exe",
				"-lm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "C/C++: gcc.exe build md for production runs",
			"command": "C:\\msys64\\mingw64\\bin\\gcc.exe",
			//"command": "C:\\msys64\\ucrt64\\bin\\gcc.exe",
			"args": [
				"-O3",
				"${fileDirname}\\*.c",
				"-o",
				"${fileDirname}\\md.exe",
				"-lm"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}